<header>
  <nav>
    <a href="/">Home</a>
    <a href="/recipes">Recipes</a>
    <a href="/account">Account</a>
  </nav>
</header>
<div>
  <%if flash.has?(:message)%>
    <%=flash[:message]%>
  <%end%>
</div>
<h1>Account</h1>
<div>Email: <%=@user.email%></div><br>

<div>Edit Your Account:</div>
<div>
  <form method="post" action="/account">
    <input type="hidden" name="_method" value="patch">
    <div>
      <label for="edit_email">New Email</label>
      <input id="edit_email" type="email" name="email">
    </div>
    <div>
      <label for="edit_password">New Password</label>
      <input id="edit_password" type="password" name="password">
    </div>
    <div>
      <input id="edit_submit" type="submit" value="Submit Edits">
    </div>
  </form>
</div>
<div>
  <form method="get" action="/logout">
    <input type="submit" value="Log Out">
  </form>
</div>
<div>
  <form method="post" action="/account">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Account">
  </form>
</div>
